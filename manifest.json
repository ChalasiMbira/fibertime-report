{
  "name": "Fibertime Report",
  // Full name of the app
  "short_name": "Fibertime",
  // Short name for icons or home screen
  "start_url": "/",
  // URL to launch when app is opened (relative to root)
  "display": "standalone",
  // Makes app look like a native app (no browser UI)
  "background_color": "#f4f4f9",
  // Background color for splash screen (matches CSS)
  "theme_color": "#007bff",
  // Theme color for browser UI (matches button)
  "icons": [
    {
      "src": "/icon-192x192.png",
      // Path to 192x192 icon (add this file later)
      "sizes": "192x192",
      "type": "image/png"
    },
    {
      "src": "/icon-512x512.png",
      // Path to 512x512 icon (add this file later)
      "sizes": "512x512",
      "type": "image/png"
    }
  ]
}